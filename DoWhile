import java.util.Scanner;
public class dowhile{
  public static void main(String[]args){
    Scanner sc = new Scanner (System.in);
    int i = 1;
    int angka = 0;
    int total = 0;
    do{
      System.out.print("Masukan Angka : ");
      angka = sc.nextInt();
      total += angka;
    }while(total!=angka);
    System.out.println("total angka = "+total);
    angka++;
  }

}
